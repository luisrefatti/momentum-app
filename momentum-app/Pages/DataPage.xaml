<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="momentum_app.Pages.DataPage"
             Title="DataPage"
             BackgroundColor="#0e0017">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Statistics"
               FontFamily="MontserratBold"
               FontSize="25"
               TextColor="#6d4b96"
               HorizontalOptions="Center"
               Margin="0,10,0,20"/>

        <VerticalStackLayout Spacing="10">

            <Frame BackgroundColor="#3a2c4d" CornerRadius="10" Padding="20">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0" 
                           Text="Focus Sessions Completed" 
                           FontFamily="Montserrat" 
                           TextColor="White"
                           VerticalOptions="Center"/>
                    <Label Grid.Column="1" 
                           x:Name="lbFocus" 
                           Text="0" 
                           FontFamily="SpaceMono" 
                           FontSize="24" 
                           TextColor="#6d4b96"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame BackgroundColor="#3a2c4d" CornerRadius="10" Padding="20">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0" 
                           Text="Short Breaks Taken" 
                           FontFamily="Montserrat" 
                           TextColor="White"
                           VerticalOptions="Center"/>
                    <Label Grid.Column="1" 
                           x:Name="lbShortBreaks" 
                           Text="0" 
                           FontFamily="SpaceMono" 
                           FontSize="24" 
                           TextColor="#6d4b96"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame BackgroundColor="#3a2c4d" CornerRadius="10" Padding="20">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0" 
                           Text="Long Breaks Taken" 
                           FontFamily="Montserrat" 
                           TextColor="White"
                           VerticalOptions="Center"/>
                    <Label Grid.Column="1" 
                           x:Name="lbLongBreaks" 
                           Text="0" 
                           FontFamily="SpaceMono" 
                           FontSize="24" 
                           TextColor="#6d4b96"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame BackgroundColor="#3a2c4d" CornerRadius="10" Padding="20">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0" 
                           Text="Tasks Completed" 
                           FontFamily="Montserrat" 
                           TextColor="White"
                           VerticalOptions="Center"/>
                    <Label Grid.Column="1" 
                           x:Name="lbTasks" 
                           Text="0" 
                           FontFamily="SpaceMono" 
                           FontSize="24" 
                           TextColor="#6d4b96"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </Grid>
            </Frame>

        </VerticalStackLayout>

        <Button Text="Reset"
                x:Name="btReset"
                FontFamily="MontserratBold"
                TextColor="White"
                BackgroundColor="#ff6b6b" 
                CornerRadius="10"
                Margin="0,30,0,0"
                Clicked="btReset_Clicked"/>

    </VerticalStackLayout>
</ContentPage>